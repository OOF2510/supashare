<!Doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/htmx.org@2.0.8/dist/htmx.min.js"
        integrity="sha384-/TgkGk7p307TH7EXJDuUlgG3Ce1UVolAOFopFekQkkXihi5u/6OCvVKyz1W+idaz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css">
    <link href="https://vjs.zencdn.net/8.23.4/video-js.min.css" rel="stylesheet">
    <script src="https://vjs.zencdn.net/8.23.4/video.min.js"></script>
    <title>Supashare - File Sharing</title>
    <style>
        .upload-area {
            border: 2px dashed #b5bdc1;
            border-radius: 10px;
            padding: 2rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
        }

        .upload-area:hover {
            border-color: #3273dc;
        }

        .upload-area.dragover {
            border-color: #3273dc;
            background-color: rgba(50, 115, 220, 0.1);
        }

        .file-input {
            display: none;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        progress {
            height: 8px;
        }

        @media (max-width: 768px) {
            .dashboard-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Toast container */
        #toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            display: flex;
            flex-direction: column;
            gap: 10px;
            max-width: 350px;
        }

        .toast {
            animation: slideIn 0.3s ease-out;
        }

        .toast.hide {
            animation: slideOut 0.3s ease-out;
        }

        @keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes slideOut {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(400px);
                opacity: 0;
            }
        }

        /* Preview containers */
        .preview-container {
            border: 1px solid #dbdbdb;
            border-radius: 4px;
            padding: 1rem;
            margin-bottom: 1rem;
            background-color: #fafafa;
        }

        .image-preview {
            max-width: 100%;
            max-height: 200px;
            border-radius: 4px;
            object-fit: cover;
        }

        .video-preview {
            width: 100%;
            max-width: 100%;
            border-radius: 4px;
        }
    </style>
</head>

<body style="margin-top: 2rem; margin-bottom: 2rem;">
    <div class="container">
        <header class="mb-6">
            <div class="title is-2">üìÅ Supashare</div>
        </header>

        <main id="main-content">
            <div class="dashboard-grid">
                <!-- File Upload Card -->
                <div class="card">
                    <div class="card-content">
                        <h3 class="title is-4">Upload Files</h3>
                        <p class="subtitle is-6">Drag and drop files or click to browse and upload to Supashare.</p>

                        <form id='upload-form'>
                            <div class="upload-area" id="upload-area">
                                <div style="font-size: 3rem; margin-bottom: 1rem;">üìÅ</div>
                                <p>Click to upload or drag files here</p>
                            </div>
                            <input type='file' name='file' id='file-input' class="file-input" multiple>
                            <div id="selected-files" class="file-list" style="display: none;">
                                <div class="is-flex is-justify-content-space-between is-align-items-center mb-3">
                                    <p class="mb-0 has-text-weight-semibold">Selected Files:</p>
                                    <button type="button" class="button is-small is-light is-danger"
                                        id="clear-files">Clear</button>
                                </div>
                                <div id="files-container"></div>
                            </div>
                            <div id="upload-result"></div>
                            <div class="mt-4" style="display: none;" id="progress-container">
                                <progress id='upload-progress' value='0' max='100' class="progress is-primary"></progress>
                            </div>
                            <button type="submit" class="button is-primary is-fullwidth mt-4" id="upload-btn">Upload Files</button>
                        </form>
                    </div>
                </div>

                <!-- Create Zip Card -->
                <div class="card">
                    <div class="card-content">
                        <h3 class="title is-4">Create Zip Archive</h3>
                        <p class="subtitle is-6">Combine multiple files into a single ZIP archive for easy sharing.</p>

                        <form hx-post='/create-zip' hx-target='#zip-result' hx-encoding='multipart/form-data' hx-vals='js:{"user_id": getUserID()}'>
                            <div class="upload-area" id="zip-area">
                                <div style="font-size: 3rem; margin-bottom: 1rem;">üóÑÔ∏è</div>
                                <p>Select files to zip</p>
                            </div>
                            <input type='file' name='zip-files' id='zip-input' class="file-input" multiple>
                            
                            <div id="zip-selected-files" class="file-list" style="display: none;">
                                <div class="is-flex is-justify-content-space-between is-align-items-center mb-3">
                                    <p class="mb-0 has-text-weight-semibold">Selected Files:</p>
                                    <button type="button" class="button is-small is-light is-danger" id="clear-zip-files">Clear</button>
                                </div>
                                <div id="zip-files-container"></div>
                                <div id="zip-result"></div>
                            </div>
                            <button type="submit" class="button is-primary is-fullwidth mt-4">Create Zip</button>
                        </form>
                    </div>
                </div>

            <!-- Compress Media Card -->
            <div class="card">
                <div class="card-content">
                    <h3 class="title is-4">Compress Media</h3>
                    <p class="subtitle is-6">Reduce file size of images and videos.</p>

                    <form hx-post='/compress-media' hx-target='#compress-result' hx-encoding='multipart/form-data' hx-vals='js:{"user_id": getUserID()}'>
                        <div class="upload-area" id="media-area">
                            <div style="font-size: 3rem; margin-bottom: 1rem;">üì∏</div>
                            <p>Upload images or videos</p>
                        </div>
                        <input type='file' name='media-files' id='media-input' class="file-input"
                            accept="image/*,video/*" multiple>
                        
                        <div id="media-previews" style="display: none; margin-top: 1.5rem;">
                            <div class="is-flex is-justify-content-space-between is-align-items-center mb-3">
                                <p class="mb-0 has-text-weight-semibold">Selected Media:</p>
                                <button type="button" class="button is-small is-light is-danger" id="clear-media">Clear</button>
                            </div>
                            <div id="media-container"></div>
                        </div>
                        
                        <div class="field mt-4">
                            <label class="label">Quality:</label>
                            <div class="control">
                                <div class="select is-fullwidth">
                                    <select name="quality">
                                        <option value="high">High (Best Quality)</option>
                                        <option value="medium" selected>Medium (Balanced)</option>
                                        <option value="low">Low (Smallest Size)</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="button is-primary is-fullwidth mt-4">Compress Media</button>
                        <div id="compress-result" class="mt-3"></div>
                    </form>
                </div>
            </div>
            </div>

            <!-- My Shares Section -->
            <div class="shares-section">
                <div class="level mb-4">
                    <div class="level-left">
                        <div class="level-item">
                            <h2 class="title is-3">My Shares</h2>
                        </div>
                    </div>
                    <div class="level-right">
                        <div class="level-item">
                            <button class="button is-primary" hx-get="/my-shares" hx-target="#shares-list" hx-vals='js:{"user_id": getUserID()}'>
                                Refresh
                            </button>
                        </div>
                    </div>
                </div>

                <div id="shares-list" hx-get="/my-shares" hx-trigger="load" hx-vals='js:{"user_id": getUserID()}'>
                    <div class="empty-state">
                        <div class="empty-state-icon">üìÇ</div>
                        <p>Loading...</p>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Toast Container -->
    <div id="toast-container"></div>

    <script>

        document.body.addEventListener('htmx:beforeSwap', (evt) => {
            if(evt.detail.xhr.status === 400 || evt.detail.xhr.status === 500) {
                evt.detail.shouldSwap = true;
                evt.detail.isError = false;
            }
        });

        // Toast notification function
        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            
            // Bulma notification classes
            const typeClass = type === 'success' ? 'is-success' : 'is-danger';
            toast.className = `notification ${typeClass} toast`;
            toast.innerHTML = `
                <button class="delete"></button>
                ${message}
            `;
            
            container.appendChild(toast);
            
            // Add click handler to delete button
            toast.querySelector('.delete').addEventListener('click', () => {
                removeToast(toast);
            });
            
            // Auto-remove after 3 seconds
            setTimeout(() => removeToast(toast), 3000);
        }

        function removeToast(toast) {
            toast.classList.add('hide');
            setTimeout(() => toast.remove(), 300);
        }

        function copyLink(url) {
            navigator.clipboard.writeText(url).then(() => {
                showToast('Link copied to clipboard!', 'success');
            }).catch(err => {
                console.error('Failed to copy:', err);
                showToast('Failed to copy link', 'danger');
            });
        }

        // Generate or retrieve user ID
        function getUserID() {
            let userID = localStorage.getItem('supashare_user_id');
            if (!userID) {
                userID = crypto.randomUUID();
                localStorage.setItem('supashare_user_id', userID);
            }
            return userID;
        }

        // Add user ID to all upload requests
        document.addEventListener('htmx:configRequest', function (evt) {
            if (evt.detail.path === '/upload') {
                evt.detail.parameters['user_id'] = getUserID();
            }
        });

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }

        function displaySelectedFiles() {
            const filesContainer = document.getElementById('files-container');
            const selectedFilesDiv = document.getElementById('selected-files');
            filesContainer.innerHTML = '';

            if (fileInput.files.length === 0) {
                selectedFilesDiv.style.display = 'none';
                return;
            }

            selectedFilesDiv.style.display = 'block';

            for (let file of fileInput.files) {
                const fileItem = document.createElement('div');
                fileItem.className = 'box mb-3';
                fileItem.innerHTML = `
                    <div class="is-flex is-justify-content-space-between is-align-items-center">
                        <div class="is-flex is-align-items-center" style="gap: 1rem; flex: 1;">
                            <div style="font-size: 1.5rem;">üìÑ</div>
                            <div style="flex: 1;">
                                <div class="has-text-weight-semibold">${file.name}</div>
                                <div class="has-text-grey is-size-7">${formatFileSize(file.size)}</div>
                            </div>
                        </div>
                        <div class="is-flex" style="gap: 0.5rem;">
                            <button type="button" class="button is-small is-ghost remove-file" data-filename="${file.name}" title="Remove file">
                                <span class="icon is-small">
                                    <i class="fas fa-trash"></i>
                                </span>
                            </button>
                        </div>
                    </div>
                `;
                filesContainer.appendChild(fileItem);
            }

            document.querySelectorAll('.remove-file').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    removeFileFromInput(btn.dataset.filename);
                });
            });
        }

        function removeFileFromInput(filename) {
            const dataTransfer = new DataTransfer();
            for (let file of fileInput.files) {
                if (file.name !== filename) {
                    dataTransfer.items.add(file);
                }
            }
            fileInput.files = dataTransfer.files;
            displaySelectedFiles();
        }

        // File upload drag and drop
        const uploadArea = document.getElementById('upload-area');
        const fileInput = document.getElementById('file-input');
        const clearFilesBtn = document.getElementById('clear-files');

        uploadArea.addEventListener('click', () => fileInput.click());

        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragover');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            fileInput.files = e.dataTransfer.files;
            displaySelectedFiles();
        });

        fileInput.addEventListener('change', displaySelectedFiles);

        clearFilesBtn.addEventListener('click', (e) => {
            e.preventDefault();
            fileInput.value = '';
            displaySelectedFiles();
        });

        const CHUNK_SIZE = 5 * 1024 * 1024;

        async function uploadFileInChunks(file) {
            const uploadId = crypto.randomUUID();
            const totalChunks = Math.ceil(file.size / CHUNK_SIZE);
            const progressContainer = document.getElementById('progress-container');
            const progressBar = document.getElementById('upload-progress');
            const uploadResult = document.getElementById('upload-result');
            const uploadBtn = document.getElementById('upload-btn');

            progressContainer.style.display = 'block';
            uploadBtn.disabled = true;
            uploadResult.innerHTML = '<p>Uploading...</p>';

            for (let index = 0; index < totalChunks; index++) {
                const start = index * CHUNK_SIZE;
                const end = Math.min(start + CHUNK_SIZE, file.size);
                const chunk = file.slice(start, end);

                const formData = new FormData();
                formData.append('chunk', chunk, file.name);
                formData.append('upload_id', uploadId);
                formData.append('index', index.toString());
                formData.append('total', totalChunks.toString());
                formData.append('filename', file.name);
                formData.append('user_id', getUserID());

                try {
                    const response = await fetch('/upload/chunk', {
                        method: 'POST',
                        body: formData
                    });

                    if (!response.ok) {
                        const errorText = await response.text();
                        throw new Error(errorText);
                    }

                    const progress = ((index + 1) / totalChunks) * 100;
                    progressBar.setAttribute('value', progress.toString());

                    if (index === totalChunks - 1) {
                        const resultText = await response.text();
                        uploadResult.innerHTML = resultText;
                        showToast('File uploaded successfully!', 'success');
                        fileInput.value = '';
                        displaySelectedFiles();
                    }
                } catch (error) {
                    uploadResult.innerHTML = `<p>Error: ${error.message}</p>`;
                    showToast('Upload failed', 'danger');
                    break;
                }
            }

            progressContainer.style.display = 'none';
            progressBar.setAttribute('value', '0');
            uploadBtn.disabled = false;
        }

        document.getElementById('upload-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            if (fileInput.files.length === 0) {
                document.getElementById('upload-result').innerHTML = '<p>Error: No file selected</p>';
                return;
            }

            for (const file of fileInput.files) {
                await uploadFileInChunks(file);
            }
        });

        // Zip functionality
        const zipArea = document.querySelector('.card:nth-child(2) .upload-area');
        const zipInput = document.getElementById('zip-input');
        const clearZipFilesBtn = document.getElementById('clear-zip-files');

        zipArea.addEventListener('click', () => zipInput.click());

        function displayZipSelectedFiles() {
            const filesContainer = document.getElementById('zip-files-container');
            const selectedFilesDiv = document.getElementById('zip-selected-files');
            filesContainer.innerHTML = '';

            if (zipInput.files.length === 0) {
                selectedFilesDiv.style.display = 'none';
                return;
            }

            selectedFilesDiv.style.display = 'block';

            for (let file of zipInput.files) {
                const fileItem = document.createElement('div');
                fileItem.className = 'box mb-3';
                fileItem.innerHTML = `
                    <div class="is-flex is-justify-content-space-between is-align-items-center">
                        <div class="is-flex is-align-items-center" style="gap: 1rem; flex: 1;">
                            <div style="font-size: 1.5rem;">üìÑ</div>
                            <div style="flex: 1;">
                                <div class="has-text-weight-semibold">${file.name}</div>
                                <div class="has-text-grey is-size-7">${formatFileSize(file.size)}</div>
                            </div>
                        </div>
                        <div class="is-flex" style="gap: 0.5rem;">
                            <button type="button" class="button is-small is-ghost remove-zip-file" data-filename="${file.name}" title="Remove file">
                                <span class="icon is-small">
                                    <i class="fas fa-trash"></i>
                                </span>
                            </button>
                        </div>
                    </div>
                `;
                filesContainer.appendChild(fileItem);
            }

            document.querySelectorAll('.remove-zip-file').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    removeZipFileFromInput(btn.dataset.filename);
                });
            });
        }

        function removeZipFileFromInput(filename) {
            const dataTransfer = new DataTransfer();
            for (let file of zipInput.files) {
                if (file.name !== filename) {
                    dataTransfer.items.add(file);
                }
            }
            zipInput.files = dataTransfer.files;
            displayZipSelectedFiles();
        }

        zipInput.addEventListener('change', displayZipSelectedFiles);

        clearZipFilesBtn.addEventListener('click', (e) => {
            e.preventDefault();
            zipInput.value = '';
            displayZipSelectedFiles();
        });

        // Clear zip files on successful compression
        htmx.on('form[hx-post="/create-zip"]', 'htmx:afterRequest', function(evt) {
            if (evt.detail.xhr.status === 200) {
                zipInput.value = '';
                displayZipSelectedFiles();
            }
        });

        // Media functionality
        const mediaArea = document.querySelector('.card:nth-child(3) .upload-area');
        const mediaInput = document.getElementById('media-input');
        const clearMediaBtn = document.getElementById('clear-media');

        mediaArea.addEventListener('click', () => mediaInput.click());

        function displayMediaPreviews() {
            const container = document.getElementById('media-container');
            const previewsDiv = document.getElementById('media-previews');
            container.innerHTML = '';

            if (mediaInput.files.length === 0) {
                previewsDiv.style.display = 'none';
                return;
            }

            previewsDiv.style.display = 'block';

            for (let file of mediaInput.files) {
                const isVideo = file.type.startsWith('video/');
                const isImage = file.type.startsWith('image/');
                const previewDiv = document.createElement('div');
                previewDiv.className = 'preview-container';

                if (isImage) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        previewDiv.innerHTML = `
                            <div class="mb-2">
                                <img src="${e.target.result}" alt="${file.name}" class="image-preview">
                            </div>
                            <div class="has-text-weight-semibold">${file.name}</div>
                            <div class="has-text-grey is-size-7">${formatFileSize(file.size)}</div>
                        `;
                    };
                    reader.readAsDataURL(file);
                } else if (isVideo) {
                    const videoId = 'video-' + Math.random().toString(36).substr(2, 9);
                    const videoUrl = URL.createObjectURL(file);
                    previewDiv.innerHTML = `
                        <div class="mb-2">
                            <video 
                                id="${videoId}"
                                class="video-js vjs-default-skin video-preview"
                                controls
                                preload="metadata"
                                width="100%"
                                height="auto">
                                <source src="${videoUrl}" type="${file.type}">
                                Your browser does not support HTML5 video.
                            </video>
                        </div>
                        <div class="has-text-weight-semibold">${file.name}</div>
                        <div class="has-text-grey is-size-7">${formatFileSize(file.size)}</div>
                    `;
                    container.appendChild(previewDiv);
                    // Initialize Video.js player after DOM element is added
                    setTimeout(() => {
                        const videoElement = document.getElementById(videoId);
                        if (videoElement && !videojs.getPlayer(videoId)) {
                            videojs(videoId, {
                                controls: true,
                                autoplay: false,
                                preload: 'metadata',
                                fluid: true
                            });
                        }
                    }, 0);
                    return;
                } else {
                    previewDiv.innerHTML = `
                        <div style="font-size: 2rem; margin-bottom: 0.5rem;">üìÑ</div>
                        <div class="has-text-weight-semibold">${file.name}</div>
                        <div class="has-text-grey is-size-7">${formatFileSize(file.size)}</div>
                    `;
                }

                container.appendChild(previewDiv);
            }
        }

        mediaInput.addEventListener('change', displayMediaPreviews);

        clearMediaBtn.addEventListener('click', (e) => {
            e.preventDefault();
            mediaInput.value = '';
            displayMediaPreviews();
        });

        mediaArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            mediaArea.classList.add('dragover');
        });

        mediaArea.addEventListener('dragleave', () => {
            mediaArea.classList.remove('dragover');
        });

        mediaArea.addEventListener('drop', (e) => {
            e.preventDefault();
            mediaArea.classList.remove('dragover');
            mediaInput.files = e.dataTransfer.files;
            displayMediaPreviews();
        });

        // Clear media on successful upload
        htmx.on('#compress-result', 'htmx:afterSwap', function() {
            mediaInput.value = '';
            displayMediaPreviews();
            showToast('Media compressed successfully!', 'success');
        });
    </script>
</body>

</html>